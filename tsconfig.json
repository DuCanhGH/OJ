{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["DOM", "ES6", "ES2017", "ESNext.AsyncIterable", "WebWorker"],
        "skipLibCheck": true,
        "sourceMap": false,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "isolatedModules": true,
        "removeComments": false,
        "checkJs": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "$prebundled/*": ["./resources/prebundled/*"],
            "$resources/*": ["./resources/*"],
            "$vnoj/*": ["./resources/vnoj/*"],
            "$js/*": ["./js/*"]
        }
    },
    "include": ["globals.d.ts", "js/**/*.ts", "js/**/*.js", "**/*.cjs"],
    "exclude": ["node_modules", "dist"]
}
