{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["DOM", "ES6", "ES2017", "ESNext.AsyncIterable", "WebWorker"],
        "skipLibCheck": true,
        "sourceMap": false,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "isolatedModules": true,
        "removeComments": false,
        "checkJs": true,
        "noEmit": true,
        // match this with package.json.alias
        "paths": {
            "$lib/*": ["./resources/lib/*"],
            "$prebundled": ["./resources/prebundled/*"],
            "$resources": ["./resources/*"],
            "$vnoj": ["./resources/vnoj/*"]
        }
    },
    "include": ["globals.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.cjs", "**/*.html"],
    "exclude": ["node_modules", "dist", "resources/prebundled"]
}
